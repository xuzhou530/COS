<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="es.source.code.activity.MainScreen">

    <FrameLayout
        android:id="@+id/main_navi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#668B8B"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/btn_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/food"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="@string/order"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/btn_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/menu"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="@string/orders"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/btn_login_or_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/login"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="@string/login_or_register"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/btn_help"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/help"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="2dp"
            android:text="@string/help"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>
    </RadioGroup>
</LinearLayout>
